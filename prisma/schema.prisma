// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Answer {
  id          Int      @id @default(autoincrement())
  text        String
  fromUserId  BigInt
  userId      BigInt
  questionId  Int
  displayName String
  createdAt   DateTime @default(now())
}

model Question {
  id                Int      @id @default(autoincrement())
  text              String
  isApproved        Boolean
  fromUserId        BigInt
  answersCount      Int
  questionChatId    BigInt
  questionMessageId BigInt
  displayName       String
  createdAt         DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  chatId    BigInt
  firstName String
  rating    Float
  userId    BigInt
  joinedAt  DateTime @default(now())
}
