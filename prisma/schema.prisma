// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Answer {
  id          Int      @id @default(autoincrement())
  text        String   @db.VarChar(3000)
  fromUserId  BigInt
  userId      BigInt
  questionId  Int
  displayName String   @db.VarChar(3000)
  likes       Int
  deslikes    Int
  doubt       Int
  caption     String   @db.VarChar(3000)
  objectType  String   @db.VarChar(3000)
  isAnon      Boolean
  createdAt   DateTime @default(now())
}

model Action {
  id         Int      @id @default(autoincrement())
  answerId   BigInt
  userId     BigInt
  actionType String   @db.VarChar(3000)
  createdAt  DateTime @default(now())
}

model Question {
  id                Int      @id @default(autoincrement())
  text              String   @db.VarChar(3000)
  isApproved        Boolean
  fromUserId        BigInt
  answersCount      Int
  questionChatId    BigInt
  questionMessageId BigInt
  displayName       String   @db.VarChar(3000)
  objectType        String   @db.VarChar(3000)
  isAnon            Boolean
  caption           String   @db.VarChar(3000)
  createdAt         DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  chatId    BigInt
  firstName String   @db.VarChar(3000)
  rating    Float
  userId    BigInt
  joinedAt  DateTime @default(now())
}
